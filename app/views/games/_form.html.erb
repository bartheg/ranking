<%= form_for(@game) do |f| %>

  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% @game.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :short_name %><br />
    <%= f.text_field :short_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.check_box :simultaneous_turns, class: 'checkbox' %>
    <%= f.label :simultaneous_turns %>
  </div>

  <h3>Possible results</h3>
  <div class="">
    <%= f.fields_for :possible_results do |result| %>
      <%= render 'possible_result_fields', f: result %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add result', f, :possible_results, class: "btn btn-default" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit(class: "btn btn-primary") %>
  </div>

<% end %>
