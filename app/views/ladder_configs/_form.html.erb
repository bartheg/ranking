<%= form_for([@ranking, @ranking_config]) do |f| %>

  <% if @ranking_config.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ranking_config.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% @ranking_config.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :default_score %><br />
    <%= f.number_field :default_score, in: 1..10000, step: 1, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :max_distance_between_players %><br />
    <%= f.number_field :max_distance_between_players, in: 1..100, step: 1, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :min_points_to_gain %><br />
    <%= f.number_field :min_points_to_gain, in: 1..100, step: 1, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :disproportion_factor %><br />
    <%= f.number_field :disproportion_factor, in: 1..100, step: 1, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :unexpected_result_bonus %><br />
    <%= f.number_field :unexpected_result_bonus, in: 1..100, step: 1, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :hours_to_confirm %><br />
    <%= f.number_field :hours_to_confirm, in: 1..100, step: 1, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit(class: "btn btn-primary") %>
  </div>

<% end %>
