<h1><%= @header %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Ladder id</th>
      <th>Name</th>
      <th>Game</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @ladders.each do |ladder| %>
      <tr>
        <td><%= ladder.id %></td>
        <td><%= link_to ladder.name, ladder %></td>
        <td><%= link_to ladder.game.short_name, ladder.game %></td>
        <td><%= truncate(ladder.description, length: 500, separator: ' ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
