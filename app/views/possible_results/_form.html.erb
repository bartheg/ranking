<%= form_for(@possible_result) do |f| %>

  <% if @possible_result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@possible_result.errors.count, "error") %> prohibited this possible result from being saved:</h2>

      <ul>
        <% @possible_result.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_field :description, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :score_factor %><br />
    <%= f.number_field :score_factor, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit(class: "btn btn-primary") %>
  </div>

<% end %>
