<p id="notice"><%= notice %></p>

<h1>All Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Role</th>
      <th>Number of profiles</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.email, user %></td>
        <td><%#= user.main_role %> placeholder</td>
        <td><%= link_to user.profiles.count, user_profiles_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
