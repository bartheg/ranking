<h1><%= @user.email %></h1>
<h1>Profiles</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @user.profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= truncate(profile.description, length: 400, separator: ' ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
